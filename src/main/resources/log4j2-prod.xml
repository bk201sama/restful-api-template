<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="LOG_HOME">/data/http/logs</Property>
        <Property name="FILE_NAME">gaia</Property>
    </Properties>
    <!--先定义所有的appender-->
    <Appenders>
        <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"/>
        </Console>
        <!-- error 日志发邮件 -->
        <!--<SMTP name="Mail" subject="Error Log" to="xxx@xxx.com" from="xxx@xx.com"-->
              <!--smtpProtocol="smtp" smtpHost="smtp.ym.163.com" smtpPort="25" bufferSize="50" smtpDebug="false"-->
              <!--smtpPassword="xxxx" smtpUsername="xxx@xx.com">-->
        <!--</SMTP>-->

        <!-- wechat -->
        <!--<WeChatAppender name="weChat">-->
        <!--<ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>-->
        <!--<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS},%-5level,{%thread},%class{36},%M,%msg%xEx%n"/>-->
        <!--</WeChatAppender>-->

        <!-- 异步 -->
        <!--<Async name="AsyncMailer" >-->
            <!--<appender-ref ref="Mail"/>-->
            <!--<appender-ref ref="weChat"/>-->
        <!--</Async>-->
        <!-- 每次大小超过size，则这size大小的日志会自动存入按年份-月份建立的文件夹下面并进行压缩，作为存档-->
        <RollingFile name="RollingFile" fileName="${LOG_HOME}/${FILE_NAME}.log"
                     filePattern="${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />
                <SizeBasedTriggeringPolicy size="500 MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="Console"/>
            <!--<appender-ref ref="asyncWeChat" level="error"/>-->
            <!--<appender-ref ref="AsyncMailer" level="error"/>-->
        </Root>
    </Loggers>
</Configuration>